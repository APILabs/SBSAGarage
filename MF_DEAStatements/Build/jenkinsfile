pipeline {
    agent any
    stages
     {
        stage('pull from git')
        {
        	steps {
            	checkout([
                       $class: 'GitSCM',
                       branches: [[name: '*/master']],
                       extensions: scm.extensions + [[$class: 'LocalBranch'], [$class: 'WipeWorkspace']],
                       userRemoteConfigs: [[credentialsId: 'githubcredid', url: 'https://github.com/APILabs/SBSAGarage.git']],
                      
               		])
               	}
        }
        stage('Build Ant')
        {
        	steps {
            	withAnt(installation: 'antlocal') 
				{
					bat "ant -buildfile C:/Users/ccguest/Build/build.xml"
				}
           	 }
				
        }
	stage('Build image') {
            steps {
                echo 'Starting to build docker image'
                script {
                    def dockerfile = 'dockerfile.ace'
		    def customImage = docker.build("ace_dea:${env.BUILD_ID}", "-f ${dockerfile} ./MF_DEAStatements/Build") 
                     }
                  }
	  }
    }
}
