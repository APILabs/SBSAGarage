pipeline {
    agent any
    stages
     {
        stage('pull from git')
        {
        	steps {
            	checkout([
                       $class: 'GitSCM',
                       branches: [[name: '*/master']],
                       extensions: scm.extensions + [[$class: 'LocalBranch'], [$class: 'WipeWorkspace']],
                       userRemoteConfigs: [[credentialsId: 'githubcredid', url: 'https://github.com/APILabs/SBSAGarage.git']],
                      
               		])
               	}
        }
        stage('Build Ant')
        {
        	steps {
            	withAnt(installation: 'antlocal') 
				{
					bat "ant -buildfile C:/Users/ccguest/Build/build.xml"
				}
           	 }
				
        }
        stage('Set Docker Env') 
        {
                steps {
                    sh """
                        export DOCKER_TLS_VERIFY="1"
                export DOCKER_HOST="tcp://192.168.99.100:2376"
                export DOCKER_CERT_PATH="C:/Users/ccguest/.docker/machine/machines/default"
                export DOCKER_MACHINE_NAME="default"
                export COMPOSE_CONVERT_WINDOWS_PATHS="true"
                pwd
                ls -lrt
                    """
                    }
        }
        stage('Build image')
        {
                steps {
                    echo 'Starting to build docker image'
                    script {
                        def dockerfile = 'dockerfile.ace_dea'
                docker.build("ace_dea:${env.BUILD_ID}", "./MF_DEAStatements/Build/dockerfile.ace_dea")
                        }
                    }
        }
    }
}
